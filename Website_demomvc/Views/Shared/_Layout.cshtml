<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    @RenderSection("Styles", false);
</head>

<body>
    <div id="main_wrapper">
        <div id="common_part">
            <div id="header">
                <img id="logo-header" src="/assets/logo.jpg">
                <div id="tiltle-header">
                    Harley-Davidson® of Saigon, Hanoi, Danang
                </div>
                <div id="search-bar">
                    <button class="button-search" type="submit">
                        <a asp-controller="Account" asp-action="LoginAccount"> ĐĂNG NHẬP </a>
                    </button>
                    <button class="button-search" type="submit">
                        <a asp-controller="Account" asp-action="Logout"> ĐĂNG XUẤT </a>
                    </button>
                </div>
            </div>
            <div id="menu">
                <div class="menu">
                    <a href="" title="freetuts">Trang chủ</a>
                    <a asp-controller="Products" asp-action="Index" title="freetuts">Sản phẩm</a>
                    <a asp-controller="Category" asp-action="Index" title="freetuts">Loại sản phẩm</a>
                    <a href="" title="freetuts">Liên hệ</a>
                </div>
            </div>
        </div>
        @RenderBody()
        <div id="footer">

        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.0/js/bootstrap.min.js" integrity="sha512-8Y8eGK92dzouwpROIppwr+0kPauu0qqtnzZZNEF8Pat5tuRNJxJXCkbQfJ0HlUG3y1HB3z18CSKmUo7i2zcPpg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
     @await RenderSectionAsync("Script", required: false)

</body>

</html>